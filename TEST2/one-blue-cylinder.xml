<?xml version="1.0" encoding="UTF-8" ?>
<!--  A cylinder floating in empty space.
 -->
<scene>
  <camera>
    <viewPoint>5 5 6</viewPoint>
    <viewDir>-2 -2 -2</viewDir>
    <projNormal>2 2 2</projNormal>
    <viewUp>0 1 0</viewUp>
    <projDistance>4</projDistance>
    <viewWidth>2.5</viewWidth>
    <viewHeight>2.5</viewHeight>
  </camera>
  <image>
    300 300 
  </image>
  <shader name="blue" type="Lambertian">
    <diffuseColor>.2 .3 1</diffuseColor>
  </shader>
  <shader name="green" type="Lambertian">
    <diffuseColor>.0 .7 1</diffuseColor>
  </shader>
  <surface type="Cylinder">
    <shader ref="blue" />
    <center>1 1 2</center>
    <radius>1</radius>
	<height>3</height>
  </surface>
  <light>
    <position>50 50 50</position>
    <intensity>1 1 1</intensity>
  </light>


</scene>